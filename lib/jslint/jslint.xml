<?xml version="1.0" encoding="UTF-8"?>
<project name="jslint" default="jslint" basedir=".">
    <property file="${phing.dir.jslint}/jslint.properties" />

    <target passthru="${passthru}" name="jslint">
        <exec dir="${jslint.exec.dir}" command="java -jar ${jslint.jar}
            --report ${jslint.format}
            ${jslint.options}
            ${jslint.source}
            > ${jslint.results.file}
        " />
    </target>

    <target passthru="${passthru}" name="jslint-tty">
        <exec dir="${jslint.exec.dir}" outputProperty="jslint.output" command="java -jar ${jslint.jar}
            ${jslint.options}
            ${jslint.source}
        " />
        <echo msg="${jslint.output}" />
    </target>
</project>
